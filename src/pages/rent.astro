<!--Astro and tailwind page that show an image on the left covering the whole height and an input an button to share email on the right -->
---
const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Rent your Starlink dish by days and enjoy ultra fast internet anywhere in Mallorca";
---
<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>Stars4Rent</title>
    <meta name="description" content={description} />
  </head>
<div class="flex flex-col md:flex-row">
    <div class="w-full md:w-1/2 bg-cover bg-center h-screen" style="background-image:url(https://images.unsplash.com/photo-1591201417943-d82df759897d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=735&q=80); "></div>
    <div class="w-full md:w-1/2 flex flex-col justify-center items-center bg-white p-10">
        <h1 class="text-3xl font-bold">Request a Starlink!</h1>
        <p class="text-gray-500  pt-3">We'll get back to you ASAP so you can enjoy the best internet during your stay</p>
        <div class="flex w-full mt-10">
            <input type="email" class="p-2 border border-gray-300 rounded-l w-full focus:outline-none" placeholder="Your email address">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-r">
                Send
            </button>
        </div>
    </div>

</html>






