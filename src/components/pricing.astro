<!-- Atro and tailwind comonent to show 3 different prices -->
---
import ContentSection from "~/components/content-section.astro";
---
<ContentSection title="Prices" id="prices">
<Fragment slot="lead">
    Pay as many or as few days as you need. We offer discounts for longer stays.
</Fragment>
<ul class="grid w-full grid-cols-1 sm:grid-cols-1 lg:grid-cols-3">
    <li class="flex flex-col items-center gap-4 bg-white rounded-lg shadow-lg p-8 ">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Daily</h2>
        <h3 class="text-gray-500 text-3xl font-bold text-center">20 €<span class="text-gray-600 text-lg">/ day</span></h3>
    </li>
    <li class="flex flex-col items-center gap-4 bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Weekly</h2>
        <h3 class="text-gray-500 text-3xl font-bold text-center">17 €<span class="text-gray-600 text-lg">/ day</span></h3>
    </li>
    <li class="flex flex-col items-center gap-4 bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Long stay</h2>
        <h3 class="text-gray-500 text-3xl font-bold text-center">15 €<span class="text-gray-600 text-lg">/ day</span></h3>
    </li>
    </ul>
</ContentSection>